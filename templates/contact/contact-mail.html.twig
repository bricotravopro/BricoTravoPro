{% extends 'base.html.twig' %}

{% block body %}
    <div class="mwrap clearfix up">
        <div class="titrage clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 wow slideInLeft" data-wow-duration="1s">
                <h1 class="tal bigfont">Contact</h1>
                <h2 class="tal fb">Vous souhaitez envoyer un pigeon éléctronique ?</h2>
            </div>
        </div>
        <section class="solo clearfix hide wow slideInRight" data-wow-duration="1s">
            <article id="form" class="col-lg-8 col-md-8 col-sm-12">
                <form action="inc/envoi.php" method="post" id="ajaxForm">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="name">NOM : </label>
                        <input id="name" name="name" type="text" placeholder="Votre Nom (obligatoire)" class="auto-clear placeholder" tabindex="1" required>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="prenom">Prénom : </label>
                        <input id="prenom" name="prenom" type="text" placeholder="Votre Prénom" class="auto-clear placeholder" tabindex="2">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="mail">Email : </label>
                        <input id="mail" name="mail" type="email" placeholder="Email (obligatoire)" class="auto-clear placeholder" tabindex="4" required>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="objet">Objet : </label>
                        <select id="objet" name="objet" tabindex="5">
                            <option value="">Objet (obligatoire)</option>
                            <option value="une demande d'informations">Demande d'informations</option>
                            <option value="une demande de devis">Demande de devis</option>
                            <option value="une prise de rendez-vous">Prise de rendez-vous</option>
                            <option value="des informations diverses">Autres</option>
                        </select>
                    </div>
                    <div class="url">
                        <label for="url" class="">URL : </label>
                        <input id="url" class="auto-clear clearfix placeholder" name="url" type="text" placeholder="" tabindex="8">
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label for="message">Message : </label>
                        <textarea name="message" id="message" cols="30" rows="10" class="autoempty" tabindex="6" placeholder="Votre message  (obligatoire)" required></textarea>
                    </div>
                    <input type="submit" value="Envoyer" tabindex="7" class="submit fade_dynamiq right">
                </form>
            </article>
            <article class="col-lg-4 col-md-4 col-sm-12 deco">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <a href="https://maps.google.fr/maps?q=tdi.com&hl=fr&geocode=+&hq=tdi.com&hnear=Lille,+Nord,+Nord-Pas-de-Calais&t=m&z=14" rel="publisher" target="_blank"><span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress"><span itemprop="name" class="adresse">TDI.com - Infographie & Communication</span> <span itemprop="streetAddress" class="rue">Teddy Deteuf : +33 (0) 6 67 76 36 82</span> <span class="ville"><span itemprop="postalCode">59110</span> <span itemprop="addressLocality">La Madeleine</span></span></span></a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-6">
                    <img class="pigeon" src="img/pigeon.png" alt="" width="300" height="200">
                </div>
            </article>
        </section>
    </div>


{% endblock %}