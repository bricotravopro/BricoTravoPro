{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div id="banner">
            <img src="/images/banner_particulier.jpg">
        </div>
        <div class="titrage clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h1 class="info">Pour nous contacter ...</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="mwrap clearfix up">
            <section id="form" class="col-lg-8 col-md-8 col-sm-12">
                <form action="inc/envoi.php" method="post" id="ajaxForm">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <label for="name">NOM : </label>
                            <input id="name" name="name" type="text" placeholder="Votre Nom (obligatoire)" class="auto-clear placeholder" tabindex="1" required>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <label for="prenom">Prénom : </label>
                            <input id="prenom" name="prenom" type="text" placeholder="Votre Prénom" class="auto-clear placeholder" tabindex="2">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="mail">Email : </label>
                        <input id="mail" name="mail" type="email" placeholder="Saisissez votre e-mail (obligatoire)" class="auto-clear placeholder" tabindex="4" required>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label for="objet">Objet : </label>
                        <select id="objet" name="objet" tabindex="5">
                            <option value="">Objet (obligatoire)</option>
                            <option value="une demande d'informations">Demande d'informations</option>
                            <option value="une demande de devis">Demande de partenariat</option>
                            <option value="une prise de rendez-vous">Demande d'entretien téléphonique</option>
                            <option value="des informations diverses">Autres</option>
                        </select>
                    </div>
                    <div class="url">
                        <label for="url" class="">URL : </label>
                        <input id="url" class="auto-clear clearfix placeholder" name="url" type="text" placeholder="" tabindex="8">
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label for="message">Message : </label>
                        <textarea name="message" id="message" cols="38" rows="10" class="autoempty" tabindex="6" placeholder="Votre message  (obligatoire)" required></textarea>
                    </div>
                        <input type="submit" value="Envoyer" tabindex="7" class="submit fade_dynamiq right">
                </form>
            </section>
            <hr>
            <!-- iFrame GoogleMap-->
            <section>
                <div class="col-12">
                    <div style="width: 100%">
                        <iframe width="100%" height="300" src="https://maps.google.com/maps?width=100%&amp;height=600&amp;hl=en&amp;q=105%20Avenue%20de%20la%20R%C3%A9publique%2C%2059110%20La%20Madeleine+(BricoTravoPro)&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                            <a href="https://www.maps.ie/map-my-route/">Create route map</a>
                        </iframe>
                    </div>
                </div>
            </section>
        </div>
    </div>


{% endblock %}